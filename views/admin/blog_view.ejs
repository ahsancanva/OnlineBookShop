<%- include('../partials/adminsimheader') -%>
    <div class="contain">
        <div class="row">

            <div class="col-3">

                <%- include('../partials/adminSidebar') -%>

            </div>



            <div class="col-9 aboutme mt-5" >
                <div class="row">
                    <div class="col-10">
                        <div class="image">
                            <td>
                                <img src="/image/<%= user.image %>" class="img-fluid "
                                    alt="<%= user.image %>"
                                    style=" text-align: left; width:100%; height: 350px; border-bottom: .5px solid rgba(0,0,0,0.9); margin-bottom: 10px;">
                            </td>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-10">
                        <div class="title">
                            <h1 class="heading" style=" text-align: left; font-size: 30px; font-weight: bold; margin-bottom: 5px;"><%=user.title%></h1>
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-10">
                        <div class="date">
                            <p style="font-size: 13px; margin-bottom: 5px; text-align: left;">
                                <%=user.date%>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-10">
                        <div class="description">
                            <p  style="font-size: 11px; margin-bottom: 5px; overflow-wrap: break-word; text-align: left;">
                                <%=user.description%>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
              


                <!-- ------- -->

            </div>

        </div>


        <%- include('../partials/adminsimfooter') -%>